{
  "rewrites": [
    { "source": "/", "destination": "/api" },
    { "source": "/((?!api/).*)", "destination": "/api/$1" }
  ],
  "functions": {
    "api/[...path].ts": {
      "includeFiles": "src/**"
    },
    "api/index.ts": {
      "includeFiles": "src/**"
    },
    "api/__health.ts": {
      "includeFiles": "src/**"
    }
  }
}


